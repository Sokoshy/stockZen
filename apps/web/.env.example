# Since the ".env" file is gitignored, you can use the ".env.example" file to
# build a new ".env" file when you clone the repo. Keep this file up-to-date
# when you add new variables to `.env`.

# This file will be committed to version control, so make sure not to have any
# secrets in it. If you are cloning this repo, create a copy of this file named
# ".env" and populate it with your secrets.

# When adding additional environment variables, the schema in "/src/lib/env.ts"
# should be updated accordingly.

# Better Auth
# Secret used by Better Auth
BETTER_AUTH_SECRET="dev-secret-change-me"
BETTER_AUTH_BASE_URL="http://localhost:3000"

# Better Auth GitHub OAuth
BETTER_AUTH_GITHUB_CLIENT_ID="github-client-id"
BETTER_AUTH_GITHUB_CLIENT_SECRET="github-client-secret"
BETTER_AUTH_GITHUB_REDIRECT_URI="http://localhost:3000/api/auth/callback/github"

# Optional webhook endpoint to deliver password reset emails.
# Expected JSON payload:
# { "template": "password-reset", "to": "user@example.com", "resetUrl": "https://..." }
PASSWORD_RESET_EMAIL_WEBHOOK_URL=""

# Optional webhook endpoint to deliver invitation emails.
# Expected JSON payload:
# { "template": "invitation", "to": "user@example.com", "inviteLink": "https://..." }
INVITATION_EMAIL_WEBHOOK_URL=""

# Optional webhook endpoint to deliver critical alert emails.
# Expected JSON payload:
# {
#   "template": "critical-alert",
#   "to": "user@example.com",
#   "productName": "Flour",
#   "productId": "uuid",
#   "currentStock": 5,
#   "alertLevel": "red",
#   "productUrl": "https://app.example.com/products/uuid"
# }
CRITICAL_ALERT_EMAIL_WEBHOOK_URL=""

# Drizzle
DATABASE_URL="postgresql://postgres:password@localhost:5432/web"
